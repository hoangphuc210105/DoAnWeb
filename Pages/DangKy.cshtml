@page
@model DoAnWeb.Pages.DangKyModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    ViewData["PageType"] = "auth";
}

<div class="register-container">
    <div class="text-center login-logo mb-3">
        <img src="~/images/user.png" alt="User Logo" />
    </div>

    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Tenkh" class="form-label">Họ và tên</label>
            <input asp-for="Input.Tenkh" class="form-control" />
            <span asp-validation-for="Input.Tenkh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Ngaysinh" class="form-label">Ngày sinh</label>
            <input asp-for="Input.Ngaysinh" type="date" class="form-control" />
            <span asp-validation-for="Input.Ngaysinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giới tính</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Input.Gioitinh" value="true" id="nam" />
                <label class="form-check-label" for="nam">Nam</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Input.Gioitinh" value="false" id="nu" />
                <label class="form-check-label" for="nu">Nữ</label>
            </div>
            <span asp-validation-for="Input.Gioitinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Diachi" class="form-label">Địa chỉ</label>
            <input asp-for="Input.Diachi" class="form-control" />
            <span asp-validation-for="Input.Diachi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Tendn" class="form-label">Tên đăng nhập</label>
            <input asp-for="Input.Tendn" class="form-control" />
            <span asp-validation-for="Input.Tendn" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Matkhau" class="form-label">Mật khẩu</label>
            <input asp-for="Input.Matkhau" type="password" class="form-control" />
            <span asp-validation-for="Input.Matkhau" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Sdt" class="form-label">Số điện thoại</label>
            <input asp-for="Input.Sdt" class="form-control" />
            <span asp-validation-for="Input.Sdt" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
    </form>

    <div class="text-center mt-3">
        <p>
            Đã có tài khoản?
            <a asp-page="/DangNhap">Đăng nhập ngay</a>
        </p>
    </div>
</div>

@section Styles {
    <style>
        .login-logo img {
            width: 90px;
            height: 90px;
            object-fit: cover;
            border-radius: 50%;
            padding: 5px;
            background: #f8f9fa;
        }

        .register-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 12px;
            background: #ffffff;
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
        }

            .register-container h2 {
                font-weight: 600;
                color: #333;
            }

        .form-label {
            font-weight: 500;
            color: #444;
        }

        .btn-primary {
            border-radius: 30px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .form-check-label {
            font-weight: 500;
            color: #555;
        }

        .text-center a {
            font-weight: 600;
            text-decoration: none;
            color: #007bff;
            transition: color 0.3s;
        }

            .text-center a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
