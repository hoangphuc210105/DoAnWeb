@model DoAnWeb.Models.Sanpham

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Tensp"></label>
        <input asp-for="Tensp" class="form-control" />
        <span asp-validation-for="Tensp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Madongsp"></label>
        <select asp-for="Madongsp" class="form-control"
                asp-items="ViewBag.Madongsp"></select>
        <span asp-validation-for="Madongsp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Soluong"></label>
        <input asp-for="Soluong" class="form-control" />
        <span asp-validation-for="Soluong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gia"></label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Giamgia"></label>
        <input asp-for="Giamgia" class="form-control" />
        <span asp-validation-for="Giamgia" class="text-danger"></span>
    </div>

    <!-- 🔹 Chỗ chọn ảnh -->
    <div class="form-group">
        <label>Hình ảnh</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Mota"></label>
        <textarea asp-for="Mota" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Ngaysanxuat"></label>
        <input asp-for="Ngaysanxuat" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
