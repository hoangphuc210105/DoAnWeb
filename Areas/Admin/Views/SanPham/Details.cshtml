@model DoAnWeb.Models.Sanpham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>@Model.Tensp</h3>
    <p><strong>Giá:</strong> @Model.Gia..ToString("N0") VND</p>
    <p><strong>Giảm giá:</strong> @(Model.Giamgia?.ToString("N0") ?? "0") VND</p>
    <p><strong>Số lượng:</strong> @Model.Soluong</p>
    <p><strong>Mô tả:</strong> @Model.Mota</p>
    <p>
        @if (!string.IsNullOrEmpty(Model.Hinhanh))
        {
            <img src="~/images/@Model.Hinhanh" alt="Ảnh sản phẩm" width="150" />
        }
    </p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Masp" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
