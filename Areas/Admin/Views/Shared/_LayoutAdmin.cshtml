@{
    Layout = null;
    var pageType = ViewData["PageType"]?.ToString() ?? "";
    // Lấy tên admin từ Session, nếu null thì mặc định là "Admin"
    var adminUser = Context.Session.GetString("ADMIN_USER") ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Chart.js CDN -->
    <script src="~/lib/chart.js/dist/chart.umd.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            width: 220px;
            min-height: 100vh;
            background-color: #343a40;
            padding: 15px;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 10px;
                text-decoration: none;
                border-radius: 4px;
                margin-bottom: 5px;
            }

                .sidebar a.active, .sidebar a:hover {
                    background-color: #198754;
                    font-weight: bold;
                }

        .topbar {
            height: 60px;
            background-color: #f8f9fa;
            padding: 10px 20px;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-white mb-4">Admin Panel</h4>
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="@(pageType=="dashboard"?"active":"")">🏠 Dashboard</a>
            <a asp-area="Admin" asp-controller="SanPham" asp-action="Index" class="@(pageType=="sanpham"?"active":"")">📦 Sản phẩm</a>
            <a asp-area="Admin" asp-controller="DonHang" asp-action="Index" class="@(pageType=="donhang"?"active":"")">🛒 Đơn hàng</a>
            <a asp-area="Admin" asp-controller="KhachHang" asp-action="Index" class="@(pageType=="khachhang"?"active":"")">👤 Khách hàng</a>
        </div>

        <!-- Main content -->
        <div class="d-flex flex-column flex-grow-1">
            <!-- Topbar -->
            <div class="topbar">
                <span>@ViewData["Title"]</span>
                <span>Xin chào, @adminUser | <a asp-area="Admin" asp-controller="AdminAccount" asp-action="Logout">Đăng xuất</a></span>
            </div>

            <!-- Content -->
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
