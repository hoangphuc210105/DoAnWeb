@model DoAnWeb.Models.Khachhang

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    ViewData["PageType"] = "auth";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="EditProfile" method="post">
        <div class="form-group mb-3">
            <label>Họ và tên</label>
            <input asp-for="Tenkh" class="form-control" />
            <span asp-validation-for="Tenkh" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Ngày sinh</label>
            <input asp-for="Ngaysinh" type="date" class="form-control" />
            <span asp-validation-for="Ngaysinh" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Giới tính</label>
            <select asp-for="Gioitinh" class="form-control">
                <option value="">Chọn giới tính</option>
                <option value="true" selected="@(Model.Gioitinh == true ? "selected" : "")">Nam</option>
                <option value="false" selected="@(Model.Gioitinh == false ? "selected" : "")">Nữ</option>
            </select>
            <span asp-validation-for="Gioitinh" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Địa chỉ</label>
            <input asp-for="Diachi" class="form-control" />
            <span asp-validation-for="Diachi" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Tên đăng nhập</label>
            <input asp-for="Tendn" class="form-control" />
            <span asp-validation-for="Tendn" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label>Số điện thoại</label>
            <input asp-for="Sdt" class="form-control" />
            <span asp-validation-for="Sdt" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="Phone" asp-action="Index" class="btn btn-secondary">Quay lại</a>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
