@model DoAnWeb.Models.Khachhang

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    ViewData["PageType"] = "auth"; // để layout biết không hiển thị banner home
}

<style>
    .login-logo img {
        width: 90px;
        height: 90px;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #007bff;
        padding: 5px;
        background: #f8f9fa;
    }

        .register-container {
        max-width: 600px;

        margin: 50px auto;
        padding: 30px;
        border-radius: 12px;
        background: #ffffff;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease-in-out;
    }

    .register-container h2 {
        font-weight: 600;
        color: #333;
    }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .btn-primary {
        border-radius: 30px;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }

    .form-check-label {
        font-weight: 500;
        color: #555;
    }

    .text-center a {
        font-weight: 600;
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s;
    }

    .text-center a:hover {
        color: #0056b3;
        text-decoration: underline;
    }
</style>

<div class="register-container">
    <div class="text-center login-logo mb-3">
        <img src="~/images/iconuser.jpg" alt="User Logo" />
    </div>

    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="DangKy" method="post">
        <div class="mb-3">
            <label asp-for="Tenkh" class="form-label">Họ và tên</label>
            <input asp-for="Tenkh" class="form-control" />
            <span asp-validation-for="Tenkh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ngaysinh" class="form-label">Ngày sinh</label>
            <input asp-for="Ngaysinh" type="date" class="form-control" />
            <span asp-validation-for="Ngaysinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Giới tính</label><br />
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gioitinh" value="true" id="nam" />
                <label class="form-check-label" for="nam">Nam</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Gioitinh" value="false" id="nu" />
                <label class="form-check-label" for="nu">Nữ</label>
            </div>
            <span asp-validation-for="Gioitinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Diachi" class="form-label">Địa chỉ</label>
            <input asp-for="Diachi" class="form-control" />
            <span asp-validation-for="Diachi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tendn" class="form-label">Tên đăng nhập</label>
            <input asp-for="Tendn" class="form-control" />
            <span asp-validation-for="Tendn" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Matkhau" class="form-label">Mật khẩu</label>
            <input asp-for="Matkhau" type="password" class="form-control" />
            <span asp-validation-for="Matkhau" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sdt" class="form-label">Số điện thoại</label>
            <input asp-for="Sdt" class="form-control" />
            <span asp-validation-for="Sdt" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
    </form>

    <div class="text-center mt-3">
        <p>
            Đã có tài khoản?
            <a asp-controller="NguoiDung" asp-action="DangNhap">Đăng nhập ngay</a>
        </p>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
