@model DoAnWeb.Models.CheckoutViewModel
@using DoAnWeb.Models
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "_Layout";
}

<div class="container my-4">
    <div class="row">
        <!-- Thông tin thanh toán -->
        <div class="col-md-7">
            <h4 class="mb-3 fw-bold text-uppercase">Thông tin thanh toán</h4>
            <form asp-action="Checkout" method="post" class="p-3 border rounded bg-light shadow-sm">
                <div class="mb-3">
                    <label asp-for="tenNguoiNhan" class="form-label">Tên người nhận</label>
                    <input asp-for="tenNguoiNhan" class="form-control" />
                    <span asp-validation-for="tenNguoiNhan" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="dienThoaiNhan" class="form-label">Số điện thoại</label>
                    <input asp-for="dienThoaiNhan" class="form-control" />
                    <span asp-validation-for="dienThoaiNhan" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="diaChiNhan" class="form-label">Địa chỉ nhận hàng</label>
                    <input asp-for="diaChiNhan" class="form-control" />
                    <span asp-validation-for="diaChiNhan" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Phương thức thanh toán</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="paymentMethod" value="COD" checked />
                        <label class="form-check-label">Thanh toán sau khi nhận hàng</label>
                    </div>
                    <div class="form-check d-flex align-items-center">
                        <input class="form-check-input me-2" type="radio" asp-for="paymentMethod" value="VNPAY" id="vnpay" />
                        <label class="form-check-label d-flex align-items-center" for="vnpay">
                            <img src="~/images/vnpay.jpg" alt="VNPAY" style="height:60px; margin-right:10px;" />
                            Thanh toán qua VnPay
                        </label>
                    </div>
                    <span asp-validation-for="paymentMethod" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary px-4">Đặt hàng</button>
            </form>
        </div>

        <!-- Giỏ hàng -->
        <div class="col-md-5">
            <h4 class="mb-3 fw-bold text-uppercase">Đơn hàng của bạn</h4>
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.CartItems != null && ((List<Giohang>)ViewBag.CartItems).Any())
                    {
                        decimal total = 0;
                        foreach (var item in (List<Giohang>)ViewBag.CartItems)
                        {
                            var price = (item.MaspNavigation.Gia ?? 0);
                            var subtotal = price * item.Soluong;
                            total += subtotal;

                            <tr>
                                <td>@item.MaspNavigation.Tensp × @item.Soluong</td>
                                <td>@price.ToString("N0") đ</td>
                                <td>@item.Soluong</td>
                                <td>@subtotal.ToString("N0") đ</td>
                            </tr>
                        }

                        <tr class="fw-bold text-danger">
                            <td colspan="3">Tổng cộng</td>
                            <td>@total.ToString("N0") đ</td>
                        </tr>
                        <tr>
                            <td colspan="3">Giao hàng</td>
                            <td class="text-success">Miễn phí</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Giỏ hàng trống</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
