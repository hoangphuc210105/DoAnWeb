@model DoAnWeb.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Chi tiết đơn hàng @Model.Madonhang</h2>

    <p><strong>Ngày đặt:</strong> @Model.Ngaydat.ToString("dd/MM/yyyy")</p>
    <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
    <p><strong>Trị giá:</strong> @Model.TriGia.ToString("N0") đ</p>

    <h4 class="mt-4">Danh sách sản phẩm</h4>
    <table class="table table-bordered table-striped mt-2">
        <thead>
            <tr>
                <th>Mã SP</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Masp</td>
                    <td>@item.TenSP</td>
                    <td>@item.Soluong</td>
                    <td>@item.Gia.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Orders" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
