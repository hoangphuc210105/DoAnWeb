@model IEnumerable<DoAnWeb.Models.ViewModels.OrderListViewModel>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
    ViewData["PageType"] = "order";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <p class="text-center">Bạn chưa có đơn hàng nào.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Trị giá</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Madonhang</td>
                        <td>@order.Ngaydat.ToString("dd/MM/yyyy")</td>
                        <td>@order.TriGia.ToString("N0") đ</td>
                        <td>@order.TrangThai</td>
                        <td>
                            <a asp-controller="DonHang" asp-action="Details" asp-route-id="@order.Madonhang" class="btn btn-sm btn-primary">
                                Xem
                            </a>

                            @* Hiển thị nút Hủy nếu trạng thái đơn là "Chờ xác nhận" *@
                            @if (order.TrangThai == "Chờ xác nhận")
                            {
                                <form asp-controller="DonHang" asp-action="Cancel" asp-route-id="@order.Madonhang" method="post" style="display:inline;"
                                      onsubmit="return confirm('Bạn có chắc muốn hủy đơn hàng này?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Hủy</button>
                                </form>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
