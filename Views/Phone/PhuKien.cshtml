@model IEnumerable<DoAnWeb.Models.Sanpham>

@{
    ViewData["Title"] = "Danh sách Phụ kiện";
    var keyword = ViewData["SearchKeyword"] as string;
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">@ViewData["Title"]</h2>

    <!-- Form tìm kiếm 
    <form asp-action="PhuKien" method="get" class="mb-3 d-flex">
        <input type="text" name="keyword" class="form-control me-2" placeholder="Tìm phụ kiện..."
               value="@keyword" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>-->

    <!-- Danh sách sản phẩm -->
    <div class="row">
        @if (!Model.Any())
        {
            <p class="text-muted">Không tìm thấy phụ kiện nào.</p>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/@item.Hinhanh"
                             class="card-img-top" alt="@item.Tensp" style="height:200px; object-fit:contain;" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Tensp</h5>
                            <p class="card-text text-danger fw-bold">
                                @String.Format("{0:N0} đ", item.Gia)
                            </p>
                            <a asp-action="Details" asp-route-id="@item.Masp"
                               class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
