@model IEnumerable<DoAnWeb.Models.Sanpham>

@{
    ViewData["Title"] = "Danh sách iPad";
    var keyword = ViewData["SearchKeyword"] as string;
}

<div class="container mt-4">
    <!-- Banner -->
    <div class="mb-4">
        <img src="~/images/banner2.jpg" alt="Banner iPad"
             class="img-fluid w-100 rounded shadow" style="max-height:300px; object-fit:cover;" />
    </div>

    <h2 class="mb-3 text-center">@ViewData["Title"]</h2>

    <!-- Danh sách sản phẩm -->
    <div class="row">
        @if (!Model.Any())
        {
            <p class="text-muted">Không tìm thấy iPad nào.</p>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/@item.Hinhanh"
                             class="card-img-top" alt="@item.Tensp" style="height:200px; object-fit:contain;" />

                        <div class="card-body text-center">
                            <h5 class="card-title">@item.Tensp</h5>
                            <p class="card-text text-danger fw-bold">
                                @String.Format("{0:N0} đ", item.Gia)
                            </p>
                            <a asp-action="Details" asp-route-id="@item.Masp"
                               class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
