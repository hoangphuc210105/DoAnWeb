@model DoAnWeb.Models.Sanpham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "_Layout";
}

<h2>@Model.Tensp</h2>

<div class="row">
    <div class="col-md-6">
        <img src="~/images/@Model.Hinhanh" alt="@Model.Tensp" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <h3 class="text-danger">@String.Format("{0:N0} đ", Model.Gia)</h3>
        <p><strong>Màu sắc:</strong> @Model.Color</p>
        <p><strong>Mô tả:</strong> @Model.Mota</p>
        <p><strong>Ngày sản xuất:</strong> @Model.Ngaysanxuat?.ToString("dd/MM/yyyy")</p>

        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>
